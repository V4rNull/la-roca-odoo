<odoo>
  <record id="view_familia_form" model="ir.ui.view">
    <field name="name">la_roca.familia.form</field>
    <field name="model">la_roca.familia</field>
    <field name="arch" type="xml">
      <form string="Familia">
        <sheet>
          <group>
            <field name="nombre"/>
            <field name="telefono"/>
            <field name="direccion"/>
          </group>
          <notebook>
            <page string="Miembros">
              <field name="miembros_ids">
                <tree editable="bottom">
                  <field name="persona_id"/>
                  <field name="parentesco"/>
                </tree>
              </field>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="view_familia_tree" model="ir.ui.view">
    <field name="name">la_roca.familia.tree</field>
    <field name="model">la_roca.familia</field>
    <field name="arch" type="xml">
      <tree string="Familias">
        <field name="nombre"/>
        <field name="telefono"/>
        <field name="direccion"/>
      </tree>
    </field>
  </record>

  <record id="action_familias" model="ir.actions.act_window">
    <field name="name">Familias</field>
    <field name="res_model">la_roca.familia</field>
    <field name="view_mode">tree,form</field>
  </record>

  <menuitem id="menu_la_roca_root" name="La Roca"/>

  <menuitem id="menu_familias" name="Familias" parent="menu_la_roca_root" action="action_familias"/>
</odoo>

